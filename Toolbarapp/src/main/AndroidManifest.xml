<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ali.android.toolbarapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ToolBarActivity"
            android:theme="@style/Theme.ToolBar.Base">
            <intent-filter>
                <action android:name="ToolBarAction" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ZhiHuActivity"
            android:theme="@style/Theme.ToolBar.ZhiHu">
            <intent-filter>
                <action android:name="ZhiHuAction" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".CurTooBarActivity"
            android:theme="@style/AppTheme">
            <action android:name="com.ali.android.toolbarapp.curtoobaractivity" />

            <category android:name="android.intent.category.DEFAULT" />
        </activity>
    </application>

</manifest>